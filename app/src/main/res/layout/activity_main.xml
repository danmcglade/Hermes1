<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bluecats.services.MainActivity" >



    <CheckBox
        android:text="Out Of Range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rangeCB"

        android:layout_marginBottom="19dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn"
            android:text="Clear Options and app token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/btn2"
            android:text = "Stop Purring."
            android:layout_below="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_message"
            android:layout_below="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/txt_message1"
            android:layout_below="@+id/txt_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UnknownId" />


        <Button
            android:text="Send Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendEmail"
            android:onClick="sendEmail"
            android:layout_below="@+id/btn2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rangeCB"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:id="@+id/timerTV"
            android:visibility="invisible" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/BeaconNameET"


            android:layout_gravity="center"
            android:hint="Beacon Name" />

        <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SubmitButton"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />
    </LinearLayout>


</RelativeLayout>